"LDAPClientIntegrity"=dword:00000002   ; 2=require signing (sealing if available).

[HKLM\SYSTEM\CurrentControlSet\Services\HTTP\Parameters]
"EnableHttp2Cleartext"=dword:00000000  ; Disable HTTP/2 over h2c (cleartext).
"EnableHttp2Tls"=dword:00000000        ; Disable HTTP/2 over TLS (h2). Mitigates certain HTTP/2-class issues; can reduce perf/compat; many apps fall back to HTTP/1.1.

[HKLM\SYSTEM\CurrentControlSet\Services\FDResPub]
"Start"=dword:00000004                 ; Disabled. Stops publishing SMB/Printers via WS-DISCOVERY; reduces LAN exposure.
"Type"=dword:00000020                  ; Service type.

[HKLM\SYSTEM\CurrentControlSet\Services\Dnscache\Parameters]
"DisableAutoProxy"=dword:00000001      ; Don’t auto-use WPAD/Proxy from DNS.
"DisableParallelAandAAAA"=dword:00000001 ; Don’t query A/AAAA in parallel (minor latency increase; privacy).
"EnableAutoDoh"=dword:00000000         ; Disable automatic DoH (you also set a policy elsewhere).
"EnableMDNS"=dword:00000000            ; Disable mDNS.
"UseHostsFile"=dword:00000001          ; Use HOSTS file.

[HKLM\SYSTEM\CurrentControlSet\Services\BthAvctpSvc\Parameters\Bats]
"UserPrefersClassicAudio"=dword:00000001 ; 1=prefer Classic (A2DP) over LE Audio; 0=prefer LE Audio. Keeping 1 can maximize compatibility; 0 gives LE Audio benefits (battery/latency) if your stack supports it.

[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\WlanSvc\Parameters]
"ScanWhenAssociated"=dword:00000000 ; 0=Do NOT background-scan while connected (reduces probe traffic/fingerprint; may slow roaming). 1=Allow scans (better roaming).

[HKEY_LOCAL_MACHINE\SYSTEM\Setup]
"CmdLine"=""                ; Command run by setup when SetupType≠0 (often "setup -newsetup" during sysprep/upgrade). Empty = nothing launches.

