[HKEY_LOCAL_MACHINE\Software\Microsoft\Windows NT\CurrentVersion\NetworkList\DefaultMediaCost]
"3G"=dword:00000002 ; 2=Metered (limits background activity).
"4G"=dword:00000002 ; 2=Metered.
"5G"=dword:00000002 ; 2=Metered.
"Cellular"=dword:00000002 ; 2=Metered (catch-all).
"Default"=dword:00000001 ; 1=Unrestricted (non-metered) default for unknown types.
"Ethernet"=dword:00000001 ; 1=Unrestricted.
"WiFi"=dword:00000001 ; 1=Unrestricted (set 2 to be conservative).
"Unidentified"=dword:00000002 ; 1=Unrestricted (consider 2=Metered for security/containment).

[HKEY_LOCAL_MACHINE\Software\Microsoft\Windows NT\CurrentVersion\Schedule\Maintenance]
"MaintenanceDisabled"=dword:00000001 ; 1=Disable Automatic Maintenance (reduces background tasks, but can delay maintenance/updates); 0=Enable.

[HKEY_LOCAL_MACHINE\Software\Microsoft\Windows NT\CurrentVersion\Windows]
"AppInit_DLLs"="" ; Empty list (recommended). Any DLLs here load into most processes — security risk.
"DisableATMFD"=dword:00000001 ; 1=Disable legacy Type Manager font driver (historic vulns); may be ignored on newer builds where removed.
"LoadAppInit_DLLs"=dword:00000000 ; 0=Do not load AppInit DLLs system-wide (recommended); 1=Load (not recommended).
"RequireSignedAppInit_DLLs"=dword:00000001 ; 1=Require signed AppInit DLLs if loading is enabled; 0=Allow unsigned (not recommended).
"DeviceNotSelectedTimeout"=dword:00000000 ; 0=No printer device selection timeout (legacy). Typically harmless.
"LegacyDefaultPrinterMode"=dword:00000001 ; 1=Use per-machine default printer behavior; 0=“Last used” per-user (not desired in enterprises).
"DisableMSI"=dword:00000001 ; 1=Disable Windows Installer for non-managed apps (tighten install surface); 0=Allow.

[HKEY_LOCAL_MACHINE\Software\Microsoft\Windows NT\CurrentVersion\Winlogon]
"AutoAdminLogon"="0" ; "0"=Disabled (recommended); "1"=Auto-logon enabled (unsafe).
"CachedLogonsCount"="0" ; "0"=Do not cache credentials (strong); N>0=caches last N logons (more usable offline, less secure).
"DeleteRoamingCache"=dword:00000001 ; 1=Delete locally cached roaming profiles at logoff (privacy/space); 0=Keep.
"DisableCAD"=dword:00000000 ; 0=Require Ctrl+Alt+Del (recommended); 1=Don’t require.
"EnableFirstLogonAnimation"=dword:00000000 ; 0=Disable first-logon animation (faster, less noise); 1=Enable.
"GpNetworkStartTimeoutPolicyValue"=dword:0000003c ; 60s network wait for GP processing (enterprise default).
"ScRemoveOption"="1" ; Smart card removal: "0"=No action, "1"=Lock workstation (recommended), "2"=Logoff.
"SFCDisable"=dword:00000000 ; 0=System File Checker ON (recommended); non-zero disables (unsafe).
"ShutdownWithoutLogon"=dword:00000000 ; 0=Remove shutdown button on logon screen.
"PasswordExpiryWarning"=dword:0000000e ; Warn users 14 days before password expiry.

